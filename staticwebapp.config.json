{
  "platform": {
    "apiRuntime": "node:20"
  },
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": ["/docs/*", "/images/*", "*.css", "*.js", "*.html", "*.json", "*.ico", "*.png", "*.jpg", "*.svg"]
  },
  "routes": [
    {
      "route": "/api/price-updater",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/api/monthly-snapshot",
      "allowedRoles": ["anonymous", "authenticated"]
    },
    {
      "route": "/api/*",
      "allowedRoles": ["anonymous", "authenticated"]
    }
  ]
}
